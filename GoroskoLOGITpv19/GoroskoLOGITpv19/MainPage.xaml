<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoroskoLOGITpv19.MainPage">

    <StackLayout>
        <Frame x:Name="h" CornerRadius="90" HorizontalOptions="Center" Padding="50,40" BackgroundColor="#615B5B">
            <Label Text="" VerticalOptions="CenterAndExpand" Margin="0,-32" HorizontalOptions="CenterAndExpand" />
        </Frame>
       
            <Frame x:Name="b" CornerRadius="120" HorizontalOptions="Center" Padding="50" BackgroundColor="Aqua">
                <Label Text="(О)-(О)" VerticalOptions="CenterAndExpand"  HorizontalOptions="CenterAndExpand" />
            </Frame>
        
            <Frame x:Name="f" CornerRadius="120" HorizontalOptions="Center" Padding="100" BackgroundColor="Aqua">
                <Label Text="0" VerticalOptions="CenterAndExpand"  HorizontalOptions="CenterAndExpand" />
            </Frame>
        
        <Button Text="ТАЯТЬ"
                x:Name="on"
                Clicked="on_Clicked"/>
        <Button Text="НЕ ТАЯТЬ" 
             x:Name="off" 
             Padding="0,-5,0,0" 
             Margin="0,-10"
             Clicked="off_Clicked" />
        
    </StackLayout>

</ContentPage>
